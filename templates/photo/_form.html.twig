<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form, {'attr': {'class': 'mt-3'}}) }}
            <div class="mb-3">
                {{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label d-none d-md-block'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.link, 'Picture://URL', {'label_attr': {'class': 'form-label d-none d-md-block'}}) }}
                {{ form_widget(form.link, {'attr': {'class': 'form-control', 'placeholder': 'Picture://URL'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.prompt, 'Prompt', {'label_attr': {'class': 'form-label d-none d-md-block'}}) }}
                {{ form_widget(form.prompt, {'attr': {'class': 'form-control', 'placeholder': 'Prompt'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.description, 'Comment', {'label_attr': {'class': 'form-label d-none d-md-block'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Comment'}}) }}
            </div>
            <div class="d-flex flex-row mb-3 justify-content-between ">
                <div class="mt-1">
                    <button type="submit" class="btn btn-primary">Add pic</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
